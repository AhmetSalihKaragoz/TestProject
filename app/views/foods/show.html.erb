<% if @food %>
  <h1><%= @food.name %></h1>
  <div class="mt-6">
    <p><strong>Calories:</strong> <%= @food.calories %></p>
    <p><strong>Protein:</strong> <%= @food.protein %></p>
    <p><strong>Carbs:</strong> <%= @food.carbs %></p>
    <p><strong>Fat:</strong> <%= @food.fat %></p>
  </div>
<% end %>
